{
  "version": "0.1.0",
  "description": "Node Express App",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts && yarn tslint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "serve": "node build/index.js",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\""
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.9",
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.6",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "morgan": "^1.9.1"
  }
}
